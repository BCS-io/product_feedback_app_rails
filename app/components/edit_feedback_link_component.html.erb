<% if policy(@feedback).update? %>
  <%= link_to edit_feedback_path(@feedback), class: "relative inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-xs font-medium rounded-lg text-white bg-indigo-200 hover:bg-purple-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-indigo-500" do %>
    <span class="font-bold">Edit Feedback</span>
  <% end %>
<% else %>
  <div class="relative inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-xs font-medium rounded-lg text-white bg-gray-200" do %>
    <span class="font-bold">Edit Feedback</span>
  </div>
<% end %>


