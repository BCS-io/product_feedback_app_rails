<div id="feedback-<%= feedback.id %>" class="flex sm:order-first text-xs">
<% if current_user&.voted?(feedback_id: feedback.id)  %>
  <%= link_to vote_path(current_user.vote(feedback_id: feedback.id)), method: :delete, remote: true, class: "bg-indigo-200 text-white px-4 py-1.5 flex items-center sm:flex-col justify-center sm:my-8 hover:bg-indigo-50 hover:text-indigo-400 rounded-xl" do %>
    <svg class="h-2 w-2" viewBox="0 0 9 7" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M0 6L4 2L8 6" stroke="white" stroke-width="2"/>
    </svg>

    <div class="ml-2.5 sm:ml-0 sm:mt-2 "><%= feedback.upvotes_count %></div>
  <% end %>
<% else %>
  <%= link_to votes_path(feedback: feedback), method: :post, remote: true, class: "bg-gray-100 text-indigo-200 px-4 py-1.5 flex items-center sm:flex-col justify-center sm:my-8 hover:bg-indigo-50 hover:text-indigo-400 rounded-xl" do %>
    <svg class="h-2 w-2" viewBox="0 0 9 7" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M0 6L4 2L8 6" stroke="#4661E6" stroke-width="2"/>
    </svg>

    <div class="ml-2.5 sm:ml-0 sm:mt-2 "><%= feedback.upvotes_count %></div>
  <% end %>
<% end %>
</div>
